[gui]
	encoding = utf-8
[user]
	email = aereal@aereal.org
	name = aereal
[github]
	user = aereal
[alias]
	st = status -sb
	df = diff
	co = checkout
	fixup = commit --amend -C HEAD
	svn-push = !git stash && git svn dcommit && git stash pop
	svn-pull = !git stash && git svn rebase && git stash pop
	onelog = log --oneline
	squashed-merge = merge --squash
	track = checkout -t
	unstage = reset HEAD --
	fdf = diff -W
	diff-funcon = diff -W
	diff-funcon-staged = diff --cached -W
	ds = diff --staged
	network = log --graph --all --decorate --oneline
	summary = status --short --branch
	vizlog = log --graph --date-order -C -M --all --pretty=format:\"<%h> %ad [%cn] %Cgreen%d%Creset %s\"
	branch-name = name-rev --name-only
	gr = grep --heading --break
	interactive-rebase = rebase -i
	continue-rebase = rebase --continue
	abort-rebase = rebase --abort
[color]
	branch = true
	status = true
	diff = true
	interactive = true
	grep = true
	pager = true
[color "branch"]
	current = green reverse
	local = green
	remote = yellow
[color "status"]
	updated = yellow
	changed = green
	untracked = cyan
[color "diff"]
	commit = black white
	meta = black
	frag = white reverse
	func = yellow
	old = red
	new = blue
	whitespace = red reverse
[color "grep"]
	context = white
	filename = green
	function = yellow
	linenumber = magenta
	match = yellow reverse
	# selected
	# separator = magenta
[color "interactive"]
	# prompt
	# header
	# help
	# error
[i18n]
	commitencoding= utf-8
[core]
	editor = vim -u NONE -i NONE -N -c 'syntax on'
	quotepath = false
	whitespace = cr-at-eol
	pager = $PAGER
	precomposeunicode = true
[push]
	default = tracking
[branch]
	autosetuprebase = always
[gitflow "branch"]
	develop = devel
[grep]
	lineNumber = true
[tig]
	commit-order = topo
	tab-size = 2
[tig "bind"]
	generic = g move-first-line
	generic = G move-last-line
[rebase]
	stat = true
[diff "ruby"]
	funcname = =
[diff "perl"]
	funcname = =
[log]
	date = iso
[merge]
	stat = true
[status]
	showUntrackedFiles = all
	submodulesummary = true
