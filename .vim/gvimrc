if has("gui_macvim")
  set guifontwide=Osaka-mono:h14
  set guifont=Menlo:h14

  set guioptions-=T
  set guioptions-=m
  set guioptions-=r
  set guioptions-=R
  set guioptions-=l
  set guioptions-=L
  set guioptions-=b

  augroup GuiMac
    autocmd!
    autocmd GUIEnter * set fullscreen
  augroup END
endif

if has('transparency')
  set transparency=10
endif

if has("gui_running")
  let g:solarized_menu=0
  let g:solarized_contrast="high"
  set bg=dark
  colorscheme solarized
endif

let local_gvimrc_path = expand('~/.local.gvimrc')
if filereadable(local_gvimrc_path)
  exec 'source ' . local_gvimrc_path
endif
unlet local_gvimrc_path
