" vim:set et foldmethod=marker:

let g:colorscheme_name = 'desert'

runtime rc/base.vim
runtime rc/autocmd.vim
runtime rc/plugin.vim
runtime rc/tab.vim
runtime rc/key.vim
runtime rc/command.vim

set bg=dark
execute 'colorscheme ' . g:colorscheme_name
if !has('vim_starting')
  echomsg '---> Reload bundles'
  call neobundle#call_hook('on_source')
endif
