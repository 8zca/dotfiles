escape ^t^t
defscrollback 10000
defutf8 on
defkanji utf-8
encoding utf-8 utf-8
defencoding utf-8
startup_message off
autodetach on
logfile "$HOME/.screen/screen-%Y%m%d-%n.log"
log on
deflog on
altscreen on
termcapinfo xterm* ti@:te@
term xterm-color
termcap kterm hs@
terminfo kterm hs@
vbell off
bell_msg "Bell in window %^G"

bind \^ focus top
bind $ focus bottom
bind j focus down
bind k focus up
bind w windowlist -b
bind r eval 'echo "Resize Window"' 'command -c size'
bind -c resize ^] command
bind -c resize j eval 'resize +' 'command -c resize'
bind -c resize k eval 'resize -1' 'command -c resize'

caption splitonly "%3n %f %t"
hardstatus alwayslastline "[%02c] %-w %{.r.}%{!}%n%f%t%{dd} %+w %=  %{..r} %0`"

