escape ^o^o
defscrollback 10000
defutf8 on
defkanji utf-8
encoding utf-8 utf-8
defencoding utf-8
startup_message off
autodetach on
logfile "$HOME/.screen/log/screen-%Y%m%d-%n.log"
log on
deflog on
altscreen on
defbce on
termcapinfo xterm*|screen* 'Co#256:pa#32767:AB=\E[48;5;%dm:AF=\E[38;5;%dm:'
termcapinfo xterm*|screen* ti@:te@
term xterm-256color
vbell off
bell_msg "Bell in window %^G"

bind \^ focus top
bind $ focus bottom
bind j focus down
bind k focus up
bind w windowlist -b
bind r eval 'echo "Resize window"' 'command -c resize'
bind -c resize ^] command
bind -c resize j eval 'resize +1' 'command -c resize'
bind -c resize k eval 'resize -1' 'command -c resize'

caption splitonly "%3n %t %f"
hardstatus alwayslastline "[%02c] %-w %{.r.}%{!}%n%f%t%{dd} %+w"

