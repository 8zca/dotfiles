# vim:set ft=screen

escape "^t^t"
defscrollback 10000
defutf8 on
defkanji utf-8
encoding utf-8 utf-8
defencoding utf-8
startup_message off
autodetach on
logfile "$HOME/.screen/log/screen-%Y%m%d-%n.log"
log on
deflog on
altscreen on
defbce on
termcapinfo xterm*|screen* ti@:te@
term xterm-256color
termcapinfo xterm-256color 'is=^[r^[mJ^[H^[?7h^[?1;4;6l'
vbell off
bell_msg "Bell in window %^G"

caption always "%{= gk}%-w%{.dy}%n %t%{-}%+w %=[%S]"
hardstatus ignore
